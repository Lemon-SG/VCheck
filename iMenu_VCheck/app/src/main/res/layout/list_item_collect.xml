<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llCollectItem"
    android:padding="15dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_collect_menu"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/default_menu"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_collect_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/gray_b3"
            android:text="等待付款"/>

        <TextView
            android:id="@+id/tv_collect_menu_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:text="家范儿双人菜单"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_b3"
                android:textSize="12sp"
                android:singleLine="true"
                android:text="单价:"/>

            <TextView
                android:id="@+id/tv_collect_menu_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_b3"
                android:textSize="12sp"
                android:paddingLeft="2dp"
                android:singleLine="true"
                android:text="148元"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_collect_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即购买"
            android:textSize="12sp"
            android:textColor="@color/orange_red"
            android:background="@drawable/bg_order_org_shape"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"/>
    </LinearLayout>
</LinearLayout>
