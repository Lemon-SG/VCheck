<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llVoucher"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvVoucherDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38sp"
                android:textColor="@color/gray_b3"
                android:text=""/>

            <TextView
                android:id="@+id/tvVoucherDiscountUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/gray_b3"
                android:text=""/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvVoucherDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray_b3"
            android:layout_gravity="center"
            android:padding="2dp"
            android:text=""/>

        <TextView
            android:id="@+id/tvVoucherLimitDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/gray_b3"
            android:layout_gravity="center"
            android:padding="2dp"
            android:text=""/>

        <TextView
            android:id="@+id/tvVoucherEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:padding="2dp"
            android:layout_gravity="center"
            android:textColor="@color/gray_b3"
            android:text=""/>
    </LinearLayout>
</LinearLayout>
