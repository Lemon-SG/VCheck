<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/black">

        <!--<cc.siyo.iMenu.VCheck.view.MaterialMenu.MaterialMenuView-->
            <!--android:id="@+id/material_menu_button"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:mm_strokeWidth="2"-->
            <!--app:mm_visible="true"-->
            <!--app:mm_color="#ffcc0000"-->
            <!--app:mm_transformDuration="3000"-->
            <!--app:mm_scale="@integer/demo_scale" />-->

        <LinearLayout
            android:id="@+id/ll_choose_city"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_show_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/ic_view_headline_white_18dp"
                android:text="西安"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_main_logo"/>

        <ImageView
            android:id="@+id/iv_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_person_white_24dp"/>
    </RelativeLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <!--/** 只留一个分类，并隐藏*/-->
        <!--<cc.siyo.imenu.imenu_enjoy.view.viewpager_indicator.TabPageIndicator-->
            <!--android:id="@+id/indicator"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_width="fill_parent"/>-->

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"/>
    </LinearLayout>

</LinearLayout>
