<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_notice_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_notice_store_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:text="渔阜南"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/driver_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="1.5dp"
            android:background="@color/black"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_notice_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_notice_address_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:textColor="@color/top_black"
            android:text="地址"/>

        <TextView
            android:id="@+id/tv_notice_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_notice_address_"
            android:gravity="right"
            android:textColor="@color/gray_87"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/iv_notice_address"
            android:text="北京市西城区杨梅竹斜街166号"/>

        <ImageView
            android:id="@+id/iv_notice_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_b3"/>

    <RelativeLayout
        android:id="@+id/rl_notice_tel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_notice_tel_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/top_black"
            android:text="联系餐厅"/>

        <TextView
            android:id="@+id/tv_notice_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/gray_87"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_notice_tel_"
            android:gravity="right"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/iv_notice_tel"
            android:text="010-83152539"/>

        <ImageView
            android:id="@+id/iv_notice_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_b3"/>

    <TextView
        android:id="@+id/tv_notice_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="购物须知"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_b3"/>

    <LinearLayout
        android:id="@+id/driver_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="1.5dp"
            android:background="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_notice1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/top_black"
        android:layout_toRightOf="@+id/tv_notice1_"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="15dp"
        android:background="@color/gray_b3"/>

    <TextView
        android:id="@+id/tv_notice_weChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/orange_red"
        android:gravity="center_horizontal"
        android:text="─── •  点击这里联系VCheck微信客服  • ───"/>
</LinearLayout>
