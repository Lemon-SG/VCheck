<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/llDetailNotice"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_notice_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/default_member"/>

        <TextView
            android:id="@+id/tv_notice_store_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:text="渔阜南"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/driver_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="1.5dp"
            android:background="@color/black"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_notice_like"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_notice_like_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:textColor="@color/deep_gray_text_color"
            android:text="好评率:"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_notice_like1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_favorite_red_18dp"/>

            <ImageView
                android:id="@+id/iv_notice_like2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_favorite_red_18dp"/>

            <ImageView
                android:id="@+id/iv_notice_like3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_favorite_red_18dp"/>

            <ImageView
                android:id="@+id/iv_notice_like4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_favorite_red_18dp"/>

            <ImageView
                android:id="@+id/iv_notice_like5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_favorite_red_18dp"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_b3"/>

    <RelativeLayout
        android:id="@+id/rl_notice_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_notice_address_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:textColor="@color/deep_gray_text_color"
            android:text="地址:"/>

        <TextView
            android:id="@+id/tv_notice_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_notice_address_"
            android:gravity="left"
            android:textColor="@color/deep_gray_text_color"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/iv_notice_address"
            android:text="北京市西城区杨梅竹斜街166号"/>

        <ImageView
            android:id="@+id/iv_notice_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_room_black_18dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_b3"/>

    <RelativeLayout
        android:id="@+id/rl_notice_tel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_notice_tel_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/deep_gray_text_color"
            android:text="联系餐厅:"/>

        <TextView
            android:id="@+id/tv_notice_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/deep_gray_text_color"
            android:layout_centerVertical="true"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_toRightOf="@+id/tv_notice_tel_"
            android:gravity="left"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/iv_notice_tel"
            android:text="010-83152539"/>

        <ImageView
            android:id="@+id/iv_notice_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@mipmap/ic_call_black_18dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_b3"/>

    <TextView
        android:id="@+id/tv_notice_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:padding="10dp"
        android:textColor="@color/top_black"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_b3"/>

    <LinearLayout
        android:id="@+id/driver_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="1.5dp"
            android:background="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_notice1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/gray_9c"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/tv_notice1_"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="15dp"
        android:background="@color/gray_b3"/>

    <TextView
        android:id="@+id/tv_notice_weChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:padding="10dp"
        android:textColor="@color/orange_red"
        android:gravity="center_horizontal"
        android:text="───   微信客服•知味Taste   ───"/>
</LinearLayout>
