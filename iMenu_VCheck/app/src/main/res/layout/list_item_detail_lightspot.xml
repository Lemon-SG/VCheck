<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_lightSpot_img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img"/>

    <TextView
        android:id="@+id/tv_lightSpot_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="首家中国血统的精品酒店"
        android:textColor="@color/top_black"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_lightSpot_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="这家由美国没搞美国籍独家集团牵手钓鱼台国宾馆打造的精品酒店，请来前法国总统米特拉杆的御用设计师把关。"
        android:textColor="@color/num3"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"/>
</LinearLayout>
